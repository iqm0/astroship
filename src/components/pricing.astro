---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";

const { plan } = Astro.props;
---

<div>
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <h4 class="text-lg font-medium text-gray-400">{plan.name}</h4>
    <p class="mt-2 text-gray-400">
      Ideal for {plan.description}
    </p>
    <div class="mt-8 grid gap-y-4">
      <div>
        <p class="text-gray-800"><b>Initial Setup:</b> {plan.cost.initial}</p>
        <p class="mt-1 text-gray-800"><b>Monthly:</b> {plan.cost.monthly}</p>
      </div>
      <ul class="text-left gap-y-4">
        {
          plan.features.map((item) => (
            <li class="flex items-start gap-3 text-gray-800">
              <Tick class="w-6 h-6" />
              <span>{item}</span>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="flex mt-8">
      <Link
        href={plan.button.link || "#"}
        block
        style={plan.popular ? "primary" : "outline"}>
        {plan.button.text || "Get Started"}
      </Link>
    </div>
  </div>
</div>


