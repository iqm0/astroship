---
import Link from "@components/ui/link.astro";

const { plan } = Astro.props;
---
  <div class="max-w-md w-full mx-auto p-8 bg-white shadow-lg rounded-xl">
    <div class="animate-slidein300 opacity-0 text-center">
      <h2 class="text-2xl font-extrabold text-gray-900 mb-6">Startup Plan</h2>
      <p class="text-gray-600 mb-6">
        Tailored for small companies and service professionals to thrive online.
      </p>
      <div class="mb-6">
        <span class="text-4xl font-bold text-gray-900">£150</span>
        <span class="text-base text-gray-500">initial cost</span>
      </div>
      <div class="mb-6">
        <span class="text-2xl font-bold text-gray-900">£15</span>
        <span class="text-base text-gray-500">/month</span>
      </div>
      <ul class="text-left mb-6">
        <!-- Iterate over the startup features list -->
        <li class="mb-3 text-gray-700 flex items-center">
          <svg class="w-6 h-6 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Basic Website design
        </li>
        <li class="mb-3 text-gray-700 flex items-center">
          <svg class="w-6 h-6 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Content management system
        </li>
        <li class="mb-3 text-gray-700 flex items-center">
          <svg class="w-6 h-6 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          SEO and Analytics
        </li>
        <!-- Add more features from the startup plan -->
      </ul>
      <Link
        href="/contact"
        class="inline-block w-full text-white font-bold py-3 px-6 rounded-lg bg-color-primary hover:bg-color-accent transition duration-300"
      >
        Learn More
      </Link>
    </div>
  </div>